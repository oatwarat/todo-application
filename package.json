{
    "name": "todo-app",
    "version": "1.0.0",
    "description": "Todo Application with MERN Stack",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-server": "npm install",
        "install-client": "cd client && npm install",
        "install-all": "npm run install-server && npm run install-client",
        "build": "cd client && npm run build"
    },
    "keywords": [
        "mern",
        "todo",
        "react",
        "node",
        "express",
        "mongodb"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.15.0",
        "mongoose": "^7.6.3",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.1"
    }
}
